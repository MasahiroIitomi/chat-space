          .pencil-icon
            =link_to new_group_path, class: "pencil-link" do
              =fa_icon "pencil-square-o"
        %li.side-icons__icon
          .cog-icon
            =link_to edit_user_path(current_user), class: "cog-link" do
              =fa_icon "cog"

.wrapper
  .sidebar
    .header
      %h3=current_user.name
      %ul.side-icons
        %li.side-icons__icon
          .pencil-icon
            =link_to "#", class: "pencil-link" do
              =fa_icon "pencil-square-o"
        %li.side-icons__icon
          .cog-icon
            =link_to edit_user_path(current_user), class: "cog-link" do
              =fa_icon "cog"
    =render partial: "/groups/group"
  .chat
    .header
      .header-left
        .header-left__group
          %h4 グループ名
        .header-left__members
          %p メンバー名
      .header-right
        .header-right__edit
          =link_to "Edit", class: "edit-link"
    .messages
      =render partial: "message"
    .form
      .form-wrapper
        %form
          %input{type: "text", placeholder: " type a message", class: "text-input"}
          %label.image-icon
            =fa_icon "picture-o"
            %input{type: "file", title: "", class: "image-input"}
          %input{type: "submit", value:"Send", class: "send-btn"}
